{% extends 'base.html.twig' %}

{% block body %}
   {{parent()}}
    <!--BODY -->
    <div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="img/banner.jpg" alt="Image">
                    <div class="carousel-caption d-flex align-items-center justify-content-center text-start">
                        <div class="mx-sm-5 px-5" style="max-width: 900px;">
                            <h1 class="display-2 text-white text-uppercase mb-4 animated slideInDown">Vive en tu mundo, Juega en el nuestro</h1>
                            <h4 class="text-white text-uppercase mb-4 animated slideInDown"><i class="fab fa-instagram text-primary me-3"></i>XokasYcia</h4>
                            <h4 class="text-white text-uppercase mb-4 animated slideInDown"><i class="fa fa-phone-alt text-primary me-3"></i>+34 679891834</h4>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="img/banner.jpg" alt="Image">
                    <div class="carousel-caption d-flex align-items-center justify-content-center text-start">
                        <div class="mx-sm-5 px-5" style="max-width: 900px;">
                            <h1 class="display-2 text-white text-uppercase mb-4 animated slideInDown">Adéntrate a la vida, Adéntrate al Juego</h1>
                            <h4 class="text-white text-uppercase mb-4 animated slideInDown"><i class="fab fa-instagram text-primary me-3"></i>XokasYcia</h4>
                            <h4 class="text-white text-uppercase mb-4 animated slideInDown"><i class="fa fa-phone-alt text-primary me-3"></i>+34 679891834</h4>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
   
   {% if app.user == null %}
    <div id="registro" class="container-xxl py-5">
        <div class="container">
            <div class="row g-0">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="d-flex flex-column">
                        <img class="img-fluid w-75 align-self-end" src="img/dados.jpg" alt="">
                        <div class="w-50 bg-secondary p-5" style="margin-top: -25%;">
                            <h1 class="text-uppercase text-primary mb-3">25 AÑOS</h1>
                            <h2 class="text-uppercase mb-0">Jugando</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="bg-secondary p-5">
                        <h1 class="text-uppercase mb-4">REGISTRO</h1>
                        <!--FORMULARIO-->
                        {{ form_start(registrationForm) }}
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.email,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.email) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.nombre,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.nombre) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.apellidos,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.apellidos) }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.plainPassword,  {'attr': {'class': 'form-control bg-transparent'}}) }}
                                    {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    {{ form_widget(registrationForm.id_telegram , {'attr': {'class': 'form-control bg-transparent'}})}}
                                    {{ form_label(registrationForm.id_telegram) }}
                                </div>
                            </div>
                        
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Register</button>
                            </div>
                        </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <p class="d-inline-block bg-secondary text-primary py-1 px-4">JUEGOS</p>
                <h1 class="text-uppercase">La mayor variedad</h1>
            </div>
            <div class="row g-4">
    {% for juego in juegos %}
            
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="team-img position-relative overflow-hidden">
                            <img class="img-fluid" src='imagenes/juego/{{juego.foto}}' alt="">
                        </div>
                        <div class="bg-secondary text-center p-4">
                            <h5 class="text-uppercase">{{juego.nombre}}</h5>
                            <span class="text-primary">Jugadores {{juego.numminimo}} - {{juego.nummaximo}}</span>
                        </div>
                    </div>
                </div>
            
    {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
    
