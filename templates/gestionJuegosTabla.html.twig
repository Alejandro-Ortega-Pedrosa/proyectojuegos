{% extends 'base.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/borradoJuego.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{parent()}}
<div class="container col-12">
    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
        <h1 class="text-uppercase mt-5">Juegos</h1>
    </div>
        <div class="row vh-90 justify-content-center align-align-items-center">
            <div class="col-auto">
                <div class="table-responsive">
                    <table class="table text-white text-center" border="1px">
                        <thead class="bg-secondary">
                            <tr>
                                <th scope="col">Nombre</th><th scope="col">Width</th><th scope="col">Height</th><th scope="col">Mínimo de Jugadores</th><th scope="col">Máximo de Jugadores</th><th scope="col">Foto</th><th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white text-dark">
                                {% for juego in juegos %}
                                <tr>
                                    <th scope="row">{{ juego.nombre }}</th><td>{{ juego.width }}</td><td>{{ juego.height }}</td><td>{{ juego.numminimo }}</td><td>{{ juego.nummaximo }}</td><td><img src='imagenes/juego/{{juego.foto}}' height="50px" width="50px"/></td><td><a href="gestionJuegosEditForm/{{juego.id}}"><img src="img/editar.png" height="20" width="20"></a> -- <img class="boton" id="{{juego.id}}" src="img/borrar.png" height="20" width="20"></td>
                                </tr>
                                {% endfor %}
                        </tbody>
                    </table>

                    <div class="navigation">
                        {{ knp_pagination_render(juegos) }}
                    </div>
                </div>
                <a href="gestionJuegosForm" class="btn-primary btn">Nuevo Juego</a>
            </div>
        </div>

{% endblock %}