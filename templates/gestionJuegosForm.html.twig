{% extends 'base.html.twig' %}

{% block body %}
    {{parent()}}
    
    
    <div class="container col-5">
        <div class="mb-4 mt-5"><a href="/">Home / </a><a href="/gestionJuegosTabla">Juegos / </a><a href="/gestionJuegosForm"><u>Formulario</u></a></div>
        <div class="row vh-90 justify-content-center align-align-items-center">
            <div class="col-auto p-5 bg-secondary">
                {{form_start (form)}}
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.nombre) }}
                            {{ form_errors (form.nombre) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.width, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.width) }}
                            {{ form_errors (form.width) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.height, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.height) }}
                            {{ form_errors (form.height) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.numminimo, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.numminimo) }}
                            {{ form_errors (form.numminimo) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.nummaximo, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.nummaximo) }}
                            {{ form_errors (form.nummaximo) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_row(form.foto, {'attr': {'class': 'form-control bg-transparent'}}) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_row(form.guardar, { 'label': 'Guardar' }) }}
                        </div>
                    </div>
                </div>
                {{form_end (form)}} 
            </div>
        </div>
    </div>
   
{% endblock %}