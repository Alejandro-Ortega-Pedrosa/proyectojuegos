{% extends 'base.html.twig' %}

{% block body %}
<div class="container col-5">
        <div class="row vh-90 justify-content-center align-align-items-center">
            <div class="col-auto p-5 bg-secondary">
            {{form_start (form)}}
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.email) }}
                            {{ form_errors (form.email) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.nombre) }}
                            {{ form_errors (form.nombre) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.apellidos, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.apellidos) }}
                            {{ form_errors (form.apellidos) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.password, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.password) }}
                            {{ form_errors (form.password) }}
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            {{ form_widget(form.id_telegram, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.id_telegram) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_row(form.guardar, { 'label': 'Guardar' }) }}
                        </div>
                    </div>
                </div>
            {{form_end (form)}} 
        </div>
    </div>
</div>
{% endblock %}