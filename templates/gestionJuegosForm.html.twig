{% extends 'base.html.twig' %}

{% block body %}
    {{parent()}}
    
    <div class="container">
        <div class="row vh-100 justify-content-center align-align-items-center">
            <div class="col-auto p-5">
                <a href="gestionJuegosTabla">Volver</a>
                {{form_start (form)}}
                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-floating">
                                {{ form_widget(form.nombre, {'attr': {'class': 'form-control bg-transparent'}}) }}
                                {{ form_label(form.nombre) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(form.width, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.width) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(form.height, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.height) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(form.numminimo, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.numminimo) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_widget(form.nummaximo, {'attr': {'class': 'form-control bg-transparent'}}) }}
                            {{ form_label(form.nummaximo) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_row(form.foto, {'attr': {'class': 'form-control bg-transparent'}}) }}
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            {{ form_row(form.guardar, { 'label': 'Guardar' }) }}
                        </div>
                    </div>
                </div>
                {{form_end (form)}} 
            </div>
        </div>
    </div>
   
{% endblock %}