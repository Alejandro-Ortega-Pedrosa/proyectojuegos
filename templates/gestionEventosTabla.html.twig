{% extends 'base.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/borradoEvento.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{parent()}}
<div class="container col-12">
    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
        <h1 class="text-uppercase mt-5">Eventos</h1>
    </div>
        <div class="row vh-90 justify-content-center align-align-items-center">
            <div class="col-auto">
                <div class="table-responsive">
                    <table class="table text-white text-center" border="1px">
                        <thead class="bg-secondary">
                            <tr>
                                <th scope="col">Nombre</th><th scope="col">Fecha</th><th scope="col">Juego</th><th scope="col">Acciones</th><th scope="col">Invitación</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white text-dark">
                                {% for evento in eventos %}
                                <tr>
                                    <th scope="row">{{ evento.nombre }}</th><td>{{ evento.fecha }}</td><td>{{ evento.juego }}</td><td><a href="gestionEventosEditForm/{{evento.id}}"><img src="img/editar.png" height="20" width="20"></a> -- <a class="boton" name="id" id="{{evento.id}}"><img src="img/borrar.png" height="20" width="20"></a></td><td><a class="btn btn-primary rounded-0 py-2 px-lg-4 d-none d-lg-block" href="gestionInvitaciones/{{evento.id}}">INVITACIÓN</a></td></th>
                                </tr>
                                {% endfor %}
                        </tbody>
                    </table>

                    <div class="navigation">
                        {{ knp_pagination_render(eventos) }}
                    </div>
                </div>
                <a id="" href="gestionEventosForm" class="btn-primary btn">Nuevo Evento</a>
            </div>
        </div>

{% endblock %}